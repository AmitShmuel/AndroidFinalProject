<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/background_info">

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_info"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textAllCaps="true"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/close"
        android:onClick="closeDialog"
        android:id="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/scrollView2" />

    <TextView
        android:text="@string/_2017_the_dept_of_software_engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView
        android:text="@string/shenkar_engineering_design_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:layout_width="86dp"
        android:layout_height="52dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView11"
        app:layout_constraintLeft_toLeftOf="@+id/scrollView2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_dia"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:id="@+id/scrollView2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:fontFamily="casual"
                android:textStyle="normal|bold"
                tools:layout_editor_absoluteY="87dp"
                tools:layout_editor_absoluteX="295dp" />

            <TextView
                android:text="@string/version_2_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                tools:layout_editor_absoluteY="104dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:text="@string/developed_by_yoav_saroya_amp_amit_shmuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                tools:layout_editor_absoluteY="141dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:text="@string/developed_in_the_introduction_to_mobile_computing_course_2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="178dp" />

            <TextView
                android:text="@string/instructors_dr_amnon_dekel_and_amir_uval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                tools:layout_editor_absoluteY="215dp"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:text="Special Thanks:\nwww.opengameart.org\nwww.freesound.org\nwww.craftpix.net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textStyle="normal|bold"
                android:fontFamily="casual"
                android:autoLink="web"
                tools:layout_editor_absoluteY="215dp"
                tools:layout_editor_absoluteX="16dp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>